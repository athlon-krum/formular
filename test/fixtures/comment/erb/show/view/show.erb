<div>New</div>
<%= f = form action: "/posts", model: model %>
<%= f.input :id %>
<%= f.textarea :body %>
<%= f.checkbox :public, value: true %>
<%= f.collection :replies do |reply| %>
<%= reply.input :content %>
<% end %>
<%= f.nested :owner do |owner| %>
<%= owner.input :name %>
<%= owner.input :email %>
<% end %>
<%= f.input :uuid %>
<%= f.submit value: "Submit" %>
<%= f.end %>